<UserControl    xmlns="https://github.com/avaloniaui"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
                xmlns:vm="clr-namespace:MyElectricBuddy.Core.ViewModels.Headers"
                x:Class="MyElectricBuddy.Core.Views.Headers.MainHeaderView"
                x:DataType="vm:MainHeaderViewModel">

    <Grid ColumnDefinitions="1*,8*,1*">

        <!--Open Menu-->
        <Panel	Grid.Column="0"
                Background="AliceBlue" />

        <!--Application name / Section name?-->
        <Panel	Grid.Column="1"
                Background="Aqua" />

        <!--Settings-->
        <Panel	Grid.Column="2"
                Background="AliceBlue" />
    </Grid>
</UserControl>